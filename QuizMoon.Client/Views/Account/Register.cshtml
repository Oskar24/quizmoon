@model QuizMoon.Client.Model.RegisterModel

<div class="main-content">
    <div class="logo-container">
        <img id="astro-logo" src="~/img/Astro.png" alt="Logo" />
        <img id="astro-text" src="~/img/Quizmoon.png" alt="Logo" />
    </div>

    <div class="border-content">
        <div class="header-buttons">
            <button class="btn-secondary" onclick="history.go(-1)"><img src="/img/x.png" alt="Back" style="height: 14px; filter: invert(100%);" /></button>
        </div>
        <div class="title">Register your new account:</div>

        <div class="panel-body">
            <form asp-route="Register" method="post">
                <input class="form-control" placeholder="Email" asp-for="Email" autofocus>
                <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                <input type="password" class="form-control" placeholder="Password confirmation" asp-for="PasswordConfirmation" autocomplete="off">
                <div class="main-buttons">
                    <button class="btn-primary" type="submit">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>
