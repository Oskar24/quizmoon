@model QuizMoon.Client.Model.LoginModel

<div class="main-content">
    <div class="logo-container">
        <img id="astro-logo" src="~/img/Astro.png" alt="Logo" />
        <img id="astro-text" src="~/img/Quizmoon.png" alt="Logo" />
    </div>

    <div class="border-content">

        <div class="title">Log in to continue:</div>

        <div class="panel-body">
            <form asp-route="Login" method="post">
                <div class="form-group">
                    <input class="form-control" placeholder="Username" asp-for="Username" autofocus>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                </div>
                <div class="form-group login-remember">
                    <label asp-for="RememberLogin">
                        <span>Remember me</span>
                        <input type="checkbox" asp-for="RememberLogin">
                    </label>
                </div>
                <div class="form-group">
                    <div class="main-buttons">
                        <button class="btn-primary" type="submit">Login</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
